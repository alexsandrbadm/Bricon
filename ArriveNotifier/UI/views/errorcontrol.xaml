<views1:UserControlView x:Class="ArriveNotifier.Views.ErrorControl"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                        xmlns:views1="clr-namespace:CoreLib.UI.Views">
  <Grid>
    <StackPanel>
      <TextBlock TextWrapping="WrapWithOverflow" FontSize="14" Foreground="Red" Text="{Binding Message}"/>
      <Button Content="OK" HorizontalAlignment="Center" Padding="10" Margin="4" Command="{Binding OkCommand}"/>
    </StackPanel>
  </Grid>
</views1:UserControlView>