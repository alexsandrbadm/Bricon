<Window x:Class="BriconLib.PAS.Basket.StartBasketWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:m="clr-namespace:MultiLanguageMarkup"
        Loaded="Window_Loaded" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen"
        Title="{m:Lang _1431}">
  <StackPanel>
    <StackPanel Orientation="Vertical" Margin="8">
      <TextBlock x:Uid="ML_0167" Text="{m:Lang _1432}"/>
      <StackPanel Orientation="Horizontal">
        <ComboBox x:Name="ComboBoxRaces" Width="400" Margin="4,0,4,4"/>
        <Button Click="ButtonReload_Click" Margin="5" x:Uid="ML_0170" Content="{m:Lang _1433}"/>
      </StackPanel>
    </StackPanel>
    <TextBlock Margin="8" x:Uid="ML_0171" Text="{m:Lang _1434}"/>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
      <Button Click="ButtonOk_Click" x:Name="ButtonOk" MinWidth="50" Margin="5" IsDefault="true" x:Uid="ML_0173"
              Content="{m:Lang _2}"/>
      <Button Click="ButtonCancel_Click" x:Name="ButtonCancel" MinWidth="50" Margin="5" IsCancel="true"
              x:Uid="ML_0174" Content="{m:Lang _1435}"/>
    </StackPanel>
  </StackPanel>
</Window>